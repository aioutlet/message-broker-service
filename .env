# Service Configuration
NAME=message-broker-service
PORT=4000
ENVIRONMENT=development

# Message Broker Configuration
# Options: rabbitmq, kafka, azure-servicebus
MESSAGE_BROKER_TYPE=rabbitmq

# RabbitMQ Configuration (when MESSAGE_BROKER_TYPE=rabbitmq)
RABBITMQ_URL=amqp://admin:admin123@localhost:5672/
RABBITMQ_EXCHANGE=aioutlet.events
RABBITMQ_EXCHANGE_TYPE=topic

# Kafka Configuration (when MESSAGE_BROKER_TYPE=kafka)
KAFKA_BROKERS=localhost:9092,localhost:9093,localhost:9094
KAFKA_TOPIC=aioutlet.events
KAFKA_GROUP_ID=message-broker-service

# Azure Service Bus Configuration (when MESSAGE_BROKER_TYPE=azure-servicebus)
AZURE_SERVICE_BUS_CONNECTION_STRING=Endpoint=sb://aioutlet.servicebus.windows.net/;SharedAccessKeyName=...
AZURE_SERVICE_BUS_TOPIC=aioutlet.events

# API Configuration
API_KEY=7K9mP2xR5wN8qT4vL6jH3sF1dG9bY0zA
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
REQUEST_TIMEOUT=30s
MAX_REQUEST_SIZE=5MB

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_SECOND=1000
RATE_LIMIT_BURST=2000

# Logging
LOG_LEVEL=info
LOG_FORMAT=console

# Observability Configuration
ENABLE_TRACING=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
CORRELATION_ID_HEADER=x-correlation-id

# Health Check
HEALTH_CHECK_INTERVAL=30s

# Graceful Shutdown
SHUTDOWN_TIMEOUT=30s
